<div class="container">
    <h2>Cập nhật danh sách lớp</h2>

      <form method="POST" action="/lops/{{lops._id}}?_method=PUT" class="mt-5">
        <div class="form-group">
          <label for="name">Tên lớp</label>
            <input type="text" class="form-control" id="name" name="tenLop" value="{{lops.tenLop}}"> 
        </div>
        <div class="form-group my-3">
          <label for="name">Mã khoa</label>
            <input class="form-control" id="name" name="maKhoa" value="{{lops.maKhoa}}"></input>
        </div>
        <button type="submit" class="btn btn-primary mt-5">Lưu lại</button>
      </form>
</div>       