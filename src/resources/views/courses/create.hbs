<div class="container">
    <h2>Đăng khóa học</h2>

      <form method="POST" action="/courses/store" class="mt-5">
        <div class="form-group mb-4">
          <label for="name" class="mb-3">Tên khóa học</label>
            <input type="text" class="form-control" id="name" name="name">
        </div>
        <div class="form-group mb-4">
          <label for="name" class="mb-3">Mô tả khóa học</label>
            <input type="text" class="form-control" id="name" name="description">
        </div>
        <div class="form-group mb-4">
          <label for="name" class="mb-3">Video ID</label>
            <input type="text" class="form-control" id="name" name="videoID">
        </div>
        <div class="form-group mb-4">
          <label for="name" class="mb-3">Trình độ</label>
            <input type="text" class="form-control" id="name" name="level">
        </div>
        <button type="submit" class="btn btn-primary mt-4">Thêm khóa học</button>
      </form>
</div>       